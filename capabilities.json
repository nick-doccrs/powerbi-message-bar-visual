{
  "privileges": [],
  "suppressDefaultTitle": true,

  "dataRoles": [
    { "name": "message",   "kind": "Measure", "displayName": "Message" },
    { "name": "detail",    "kind": "Measure", "displayName": "Detail" },
    { "name": "severity",  "kind": "Measure", "displayName": "Severity (optional)" },
    { "name": "value",     "kind": "Measure", "displayName": "Value to check (optional)" },
    { "name": "compareTo", "kind": "Measure", "displayName": "Compare to (optional)" }
  ],

  "dataViewMappings": [
    {
      "table": {
        "rows": {
          "select": [
            { "for": { "in": "message" } },
            { "for": { "in": "detail" } },
            { "for": { "in": "severity" } },
            { "for": { "in": "value" } },
            { "for": { "in": "compareTo" } }
          ],
          "dataReductionAlgorithm": {
            "top": { "count": 1 }
          }
        }
      }
    }
  ],

  "objects": {
    "visual": {
      "displayName": "Visual",
      "properties": {
        "showTitle": {
          "displayName": "Show title",
          "type": { "bool": true }
        },
        "titleText": {
          "displayName": "Title text",
          "type": { "text": true }
        }
      }
    },
    "trigger": {
      "displayName": "Trigger",
      "properties": {
        "useCompareField": {
          "displayName": "Use Compare Field",
          "type": { "bool": true }
        },
        "hardcodedCompareValue": {
          "displayName": "Hardcoded Compare Value",
          "type": { "text": true }
        },
        "severityOnMatch": {
          "displayName": "Severity on Match",
          "type": {
            "enumeration": [
              { "displayName": "Info",     "value": "0" },
              { "displayName": "Success",  "value": "1" },
              { "displayName": "Caution",  "value": "2" },
              { "displayName": "Critical", "value": "3" }
            ]
          }
        },
        "severityOnNoMatch": {
          "displayName": "Severity on No Match",
          "type": {
            "enumeration": [
              { "displayName": "Info",     "value": "0" },
              { "displayName": "Success",  "value": "1" },
              { "displayName": "Caution",  "value": "2" },
              { "displayName": "Critical", "value": "3" }
            ]
          }
        }
      }
    },

    "text": {
      "displayName": "Text",
      "properties": {
        "fontFamily": {
          "displayName": "Font family",
          "type": { "text": true }
        },
        "messageFontSize": {
          "displayName": "Message font size",
          "type": { "integer": true }
        },
        "detailFontSize": {
          "displayName": "Detail font size",
          "type": { "integer": true }
        },
        "toggleFontSize": {
          "displayName": "Details font size",
          "type": { "integer": true }
        },
        "messageBold": {
          "displayName": "Bold message",
          "type": { "bool": true }
        }
      }
    }
  }
}
