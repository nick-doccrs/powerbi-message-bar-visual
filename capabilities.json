{
  "privileges": [],
  "suppressDefaultTitle": true,

  "dataRoles": [
    { "name": "message",   "kind": "Measure", "displayName": "Message" },
    { "name": "detail",    "kind": "Measure", "displayName": "Detail" },
    { "name": "severity",  "kind": "Measure", "displayName": "Severity (optional)" },
    { "name": "value",     "kind": "Measure", "displayName": "Value to check (optional)" },
    { "name": "compareTo", "kind": "Measure", "displayName": "Compare to (optional)" }
  ],

  "dataViewMappings": [
    {
      "table": {
        "rows": {
          "select": [
            { "for": { "in": "message" } },
            { "for": { "in": "detail" } },
            { "for": { "in": "severity" } },
            { "for": { "in": "value" } },
            { "for": { "in": "compareTo" } }
          ],
          "dataReductionAlgorithm": {
            "top": { "count": 1 }
          }
        }
      }
    }
  ],

  "objects": {
    "rules": {
      "displayName": "Rules",
      "properties": {
        "enabled": {
          "displayName": "Enable rules",
          "type": { "bool": true }
        },
        "operator": {
          "displayName": "Operator",
          "type": {
            "enumeration": [
              { "displayName": "Equals (=)",       "value": "eq" },
              { "displayName": "Not equal (â‰ )",    "value": "neq" },
              { "displayName": "Greater than (>)", "value": "gt" },
              { "displayName": "Less than (<)",    "value": "lt" }
            ]
          }
        },
        "trueState": {
          "displayName": "Severity when TRUE",
          "type": {
            "enumeration": [
              { "displayName": "Info",     "value": "0" },
              { "displayName": "Success",  "value": "1" },
              { "displayName": "Caution",  "value": "2" },
              { "displayName": "Critical", "value": "3" }
            ]
          }
        },
        "falseState": {
          "displayName": "Severity when FALSE",
          "type": {
            "enumeration": [
              { "displayName": "Info",     "value": "0" },
              { "displayName": "Success",  "value": "1" },
              { "displayName": "Caution",  "value": "2" },
              { "displayName": "Critical", "value": "3" }
            ]
          }
        }
      }
    },

    "text": {
      "displayName": "Text",
      "properties": {
        "fontFamily": {
          "displayName": "Font family",
          "type": {
            "enumeration": [
              { "displayName": "Arial",               "value": "Arial" },
              { "displayName": "Arial Black",         "value": "Arial Black" },
              { "displayName": "Arial Unicode MS",    "value": "Arial Unicode MS" },
              { "displayName": "Calibri",             "value": "Calibri" },
              { "displayName": "Cambria",             "value": "Cambria" },
              { "displayName": "Cambria Math",        "value": "Cambria Math" },
              { "displayName": "Candara",             "value": "Candara" },
              { "displayName": "Comic Sans MS",       "value": "Comic Sans MS" },
              { "displayName": "Consolas",            "value": "Consolas" },
              { "displayName": "Constantia",          "value": "Constantia" },
              { "displayName": "Corbel",              "value": "Corbel" },
              { "displayName": "Courier New",         "value": "Courier New" },
              { "displayName": "DIN",                 "value": "DIN" },
              { "displayName": "Georgia",             "value": "Georgia" },
              { "displayName": "Lucida Sans Unicode", "value": "Lucida Sans Unicode" },

              { "displayName": "Segoe (Bold)",        "value": "Segoe UI" },
              { "displayName": "Segoe UI",            "value": "Segoe UI" },
              { "displayName": "Segoe UI Light",      "value": "Segoe UI Light" },

              { "displayName": "Symbol",              "value": "Symbol" },
              { "displayName": "Tahoma",              "value": "Tahoma" },
              { "displayName": "Times New Roman",     "value": "Times New Roman" },
              { "displayName": "Trebuchet MS",        "value": "Trebuchet MS" },
              { "displayName": "Verdana",             "value": "Verdana" }
            ]
          }
        },

        "messageFontSize": {
          "displayName": "Message font size",
          "type": { "integer": true }
        },
        "detailFontSize": {
          "displayName": "Detail font size",
          "type": { "integer": true }
        },
        "toggleFontSize": {
          "displayName": "Details font size",
          "type": { "integer": true }
        },
        "messageBold": {
          "displayName": "Bold message",
          "type": { "bool": true }
        }
      }
    }
  }
}
